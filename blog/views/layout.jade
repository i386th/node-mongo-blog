doctype html
html
  head
    title= title
    meta(charset='UTF-8')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h1 #{title}
    nav
      if user
        div 欢迎您 #{user.name}
      else 
      span 
        a(href='/', title='主页') home
      if user 
        span
          a(href='/post', title='发表文章') post
        span
          a(href='/postlist', title='文章列表') postlist
        span
          a(href='/logout', title ='登出') logout
      else
        span 
          a(href='/login', title='登录') login 
        span 
          a(href='/reg', title='注册') register
    article
      if flash
        div #{flash.message}  
        div #{flash.type}


    block content
